<% layout("/layout/layoutlogin.ejs") -%>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h3>Login</h3>
        </div>
        <div class="card-body">   
          <form action="/" method="POST" class="needs-validation" novalidate> 
            <div class="mb-3">
              <label for="username">User ID</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="adminKey" class="form-label">*Admin Key</label>
              <input name="adminKey" id="adminKey" type="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
            <a href="/register" class="btn btn-danger">Register</a>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
